<Page x:Class="IdeaManager.UI.Views.IdeaFormView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Soumettre une idée"
      Background="AliceBlue">

    <StackPanel Margin="20" Width="400">
        <TextBlock Text="Soumettre une idée"
                   FontSize="20"
                   Margin="0,0,0,15" />

        <TextBlock Text="Titre :" />
        <TextBox x:Name="TitleTextBox"
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        <TextBlock Foreground="Red"
                   FontSize="11"
                   Text="{Binding (Validation.Errors)[0].ErrorContent,
                                  ElementName=TitleTextBox}" />

        <TextBlock Text="Description :" Margin="0,15,0,0"/>
        <TextBox Text="{Binding Description}"
                 AcceptsReturn="True"
                 Height="80" />

        <Button Content="Soumettre"
                Command="{Binding SubmitCommand}"
                Margin="0,20,0,0"
                Height="40"/>
    </StackPanel>
</Page>
